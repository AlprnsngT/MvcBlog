@model IEnumerable<MvcBlog.Models.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Üyeler</h2>

<p>
    @Html.ActionLink("Yeni Üye", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Yetki
        </th>
        <th>
            Kullanıcı Adı
        </th>
        <th>
            Eposta
        </th>
        <th>
            Şifre
        </th>
        <th>
            Ad Soyad
        </th>
        <th>
            Fotoğraf
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Authority.Authority1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            <img src="@item.Foto" class="img-circle img-responsive" alt="@item.FullName" />
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.UserId }) |
            @Html.ActionLink("Detay", "Details", new { id=item.UserId }) |
            @Html.ActionLink("Sil", "Delete", new { id=item.UserId })
        </td>
    </tr>
}

</table>
