  @model MvcBlog.Models.User

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User</h2>

<div>
    <h4>Profil</h4>
    <hr />
    <dl class="dl-horizontal col-md-8">
        <dt>
            Yetkisi: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Authority.Authority1)
        </dd>

        <dt>
            Kullanıcı Adı: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

        <dt>
            Eposta: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Ad Soyad: 
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>

        <dt>
            Fotoğraf: 
        </dt>

        <dd>
           <img src="@Model.Foto" class="img-circle img-responsive" alt="@Model.FullName"/>
        </dd>
        
            @Html.ActionLink("Güncelle", "Edit", new { id = Model.UserId }) |

        
    </dl>
</div>

